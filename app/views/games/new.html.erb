<h1>New Game</h1>
<ul>
  <% for i in (0...@letters.length) do %>
    <li class="letter"><%= @letters[i] %></li>
  <% end %>
</ul>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="What is the longest word you can find?" style="width: 300px">
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit" value="Play" style="width: 50px">
</form>
